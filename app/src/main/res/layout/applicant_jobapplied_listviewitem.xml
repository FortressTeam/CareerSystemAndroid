<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:background="#BBDEFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/job_applied_companyicon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/job_applied_listviewitem_companyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="abc"
            android:textSize="@dimen/activity_title_medium"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/White"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/jobappliedjoboverview"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="Job Overview :"
                android:textSize="@dimen/activity_title_medium"/>
        </LinearLayout>
        <TextView
            android:id="@+id/job_applied_listviewitem_content"
            android:text="abc"
            android:paddingLeft="5dp"
            android:textColor="@color/Black"
            android:textSize="@dimen/activity_content_medium"
            android:maxLines="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/Black"
                android:text="Status :"
                android:textSize="@dimen/activity_title_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black"
                android:id="@+id/job_applied_listviewitem_status"
                android:text="abc"
                android:textSize="@dimen/activity_content_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/jobapplied_delete"
                    android:background="@drawable/deleteicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
